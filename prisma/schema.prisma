generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Guru {
  id          Int       @id @default(autoincrement())
  nama        String
  nip         String    @unique
  mataPelajar Matpel[]
  jadwal      Jadwal[]
  preferensi  Preferensi?
  absensi     AbsensiGuru[]
  guruPengganti GuruPengganti[] @relation("GuruAsli")
  menggantikan  GuruPengganti[] @relation("GuruPengganti")
}

model Matpel {
  id             Int       @id @default(autoincrement())
  nama           String
  jamPerMinggu   Int
  guruId         Int
  guru           Guru       @relation(fields: [guruId], references: [id])
  jadwal         Jadwal[]
}

model Kelas {
  id       Int       @id @default(autoincrement())
  nama     String
  tingkat  Int
  jadwal   Jadwal[]
  siswa    Siswa[]
}

model Siswa {
  id      Int    @id @default(autoincrement())
  nama    String
  nis     String @unique
  kelasId Int
  kelas   Kelas  @relation(fields: [kelasId], references: [id])
}

model Ruangan {
  id        Int       @id @default(autoincrement())
  nama      String
  kapasitas Int
  jadwal    Jadwal[]
}

model Jadwal {
  id         Int      @id @default(autoincrement())
  kelasId    Int
  matpelId   Int
  guruId     Int
  ruanganId  Int
  hari       String
  jamMulai   String
  jamSelesai String

  kelas    Kelas    @relation(fields: [kelasId], references: [id])
  matpel   Matpel   @relation(fields: [matpelId], references: [id])
  guru     Guru     @relation(fields: [guruId], references: [id])
  ruangan  Ruangan  @relation(fields: [ruanganId], references: [id])
  penggantian GuruPengganti[]
}

model Preferensi {
  id        Int    @id @default(autoincrement())
  guruId    Int    @unique
  hariSuka  String?
  jamSuka   String?
  jamTidak  String?
  guru      Guru   @relation(fields: [guruId], references: [id])
}

model AbsensiGuru {
  id          Int      @id @default(autoincrement())
  guruId      Int
  tanggal     DateTime
  status      String   // "Hadir", "Sakit", "Izin", "Alpa"
  keterangan  String?
  createdAt   DateTime @default(now())
  
  guru        Guru     @relation(fields: [guruId], references: [id])
  penggantiSchedule GuruPengganti[]
}

model GuruPengganti {
  id              Int      @id @default(autoincrement())
  absensiId       Int
  jadwalId        Int
  guruAsliId      Int
  guruPenggantiId Int
  tanggal         DateTime
  status          String   // "Menunggu", "Diterima", "Ditolak", "Selesai"
  catatan         String?
  createdAt       DateTime @default(now())
  
  absensi         AbsensiGuru @relation(fields: [absensiId], references: [id])
  jadwal          Jadwal   @relation(fields: [jadwalId], references: [id])
  guruAsli        Guru     @relation("GuruAsli", fields: [guruAsliId], references: [id])
  guruPengganti   Guru     @relation("GuruPengganti", fields: [guruPenggantiId], references: [id])
}
